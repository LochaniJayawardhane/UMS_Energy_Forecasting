# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=mytoken
INFLUXDB_ORG=myorg
INFLUXDB_BUCKET=mybucket

# Optional InfluxDB admin credentials (for initial setup)
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=adminpassword

# Weather API Configuration
VISUAL_CROSSING_API_KEY=your_api_key
VISUAL_CROSSING_UNITS=metric
VISUAL_CROSSING_BASE_URL=https://weather.visualcrossing.com/VisualCrossingWebServices/rest/services

# Default Location
LOCATION_LAT=51.5074
LOCATION_LON=-0.1278
LOCATION_CITY=London

# Model Configuration
MODEL_PATH=models

# Redis Configuration
# For local development: redis://localhost:6379/0
# For Docker: redis://redis:6379/0
REDIS_URL=redis://redis:6379/0

# Debug mode (optional)
DEBUG=false 